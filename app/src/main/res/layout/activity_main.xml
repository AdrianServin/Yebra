<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_x="5dp"
        android:layout_y="20dp"
        android:background="@drawable/logotipo" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/btnconsulpago"
        android:background="@drawable/consultapagos"
        android:layout_x="39dp"
        android:layout_y="150dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/btnconsul"
        android:id="@+id/btnConsulta"
        android:layout_x="214dp"
        android:layout_y="150dp"
         />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/btnnecesi"
        android:id="@+id/btnNecesidad"
        android:layout_x="39dp"
        android:layout_y="279dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/btnpago"
        android:id="@+id/btnPagos"
        android:layout_x="214dp"
        android:layout_y="279dp" />

    <EditText
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_x="0dp"
        android:layout_y="60dp"
        android:enabled="false" />

    <Button
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:background="@drawable/btnemergencia"
        android:id="@+id/btnEmerg"
        android:layout_x="100dp"
        android:layout_y="443dp" />

</AbsoluteLayout>
