<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_x="5dp"
        android:layout_y="20dp"
        android:background="@drawable/logotipo" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/btnconsul"
        android:id="@+id/btnConsulta"
        android:layout_x="275dp"
        android:layout_y="223dp"
         />


    <EditText
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_x="0dp"
        android:layout_y="60dp"
        android:editable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="No. Registro:"
        android:id="@+id/lblregistro"
        android:layout_x="0dp"
        android:layout_y="244dp" />

    <EditText
        android:layout_width="143dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/id"
        android:layout_x="130dp"
        android:layout_y="244dp" />

</AbsoluteLayout>
